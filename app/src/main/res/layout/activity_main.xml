<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!-- LinearLayout放在這裡 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_light"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/rank"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ranking_star_solid"
                    app:tint="@color/aqua" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="20dp">

                <com.example.cakegame.CustomSelector
                    android:id="@+id/selectDialog"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gear_solid"
                    android:backgroundTint="@color/aqua" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/aqua"
            android:textSize="70sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/difficulty0"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/difficulty_button"
            android:maxLines="1"
            android:text="easy"
            android:textAllCaps="true"
            android:textSize="15sp"
            app:backgroundTint="@color/sky_blue" />

        <Button
            android:id="@+id/difficulty1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/difficulty_button"
            android:maxLines="1"
            android:text="normal"
            android:textAllCaps="true"
            android:textSize="15sp"
            app:backgroundTint="@color/sky_blue" />

        <Button
            android:id="@+id/difficulty2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/difficulty_button"
            android:maxLines="1"
            android:text="hard"
            android:textAllCaps="true"
            android:textSize="15sp"
            app:backgroundTint="@color/sky_blue" />

        <Button
            android:id="@+id/difficulty3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/difficulty_button"
            android:maxLines="1"
            android:text="devil"
            android:textAllCaps="true"
            android:textSize="15sp"
            app:backgroundTint="@color/sky_blue" />

    </LinearLayout>

    <ImageView
        android:id="@+id/backgroundCake1"
        android:layout_width="91dp"
        android:layout_height="80dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/cake1" />

    <ImageView
        android:id="@+id/backgroundCake2"
        android:layout_width="89dp"
        android:layout_height="99dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/cake2" />

    <ImageView
        android:id="@+id/backgroundCake3"
        android:layout_width="126dp"
        android:layout_height="138dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/cake3" />

    <ImageView
        android:id="@+id/backgroundCake4"
        android:layout_width="94dp"
        android:layout_height="101dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/cake4" />

    <ImageView
        android:id="@+id/backgroundCake5"
        android:layout_width="90dp"
        android:layout_height="128dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="600dp"
        android:src="@drawable/cake5" />

    <ImageView
        android:id="@+id/backgroundCake6"
        android:layout_width="141dp"
        android:layout_height="158dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="550dp"
        android:src="@drawable/cake6" />




</FrameLayout>
