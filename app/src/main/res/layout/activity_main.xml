<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4E1FF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-100dip"
        app:srcCompat="@drawable/cake1" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#639ECD"
        android:textSize="70sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/difficulty1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/difficulty_button"
        android:maxLines="1"
        android:text="easy"
        android:textSize="15sp"
        app:backgroundTint="#6F30A9DF" />

    <Button
        android:id="@+id/difficulty2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/difficulty_button"
        android:maxLines="1"
        android:text="normal"
        android:textSize="15sp"
        app:backgroundTint="#6F30A9DF" />

    <Button
        android:id="@+id/difficulty3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/difficulty_button"
        android:maxLines="1"
        android:text="hard"
        android:textSize="15sp"
        app:backgroundTint="#6F30A9DF" />

    <Button
        android:id="@+id/difficulty4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/difficulty_button"
        android:maxLines="1"
        android:text="devil"
        android:textSize="15sp"
        app:backgroundTint="#6F30A9DF" />

</LinearLayout>